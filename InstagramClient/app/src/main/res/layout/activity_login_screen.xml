<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.codepath.instagramclient.LoginScreen"
    android:theme="@android:style/Theme.Holo.Light"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign in to Fitocracy!"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_sign_in"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="24sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter your Fitocracy account details"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="16sp"
        android:textColor="#448AFF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_username"
            android:layout_centerHorizontal="true"

            android:hint="Username"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_password"
            android:hint="Password"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/et_username"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iv_password"
            android:layout_alignRight="@id/et_password"
            android:layout_below="@id/et_username"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/helprounded"
            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/iv_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_password"
            android:padding="10dp"
            android:src="@drawable/rightarrow"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Or login using another network:"
        android:id="@+id/tv_sign_another"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook"
        android:background="#999999"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With my Facebook details"
        android:id="@+id/tv_sign_facebook"
        android:textColor="#03A9F4"
        android:paddingLeft="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"
            android:background="#AAAAAA"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With my Twitter details"
            android:id="@+id/tv_sign_twitter"
            android:textColor="#03A9F4"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"
            android:background="#AAAAAA"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="With my Runkeeper details"
            android:id="@+id/tv_sign_runkeeper"
            android:textColor="#03A9F4"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="20dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA"/>


</LinearLayout>
