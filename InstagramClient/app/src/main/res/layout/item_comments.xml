<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_comment_row"
    android:paddingTop="10dp"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon"
        android:id="@+id/iv_comment_profilePic"
        android:paddingRight="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Jayashree"
        android:textColor="@color/amber"
        android:id="@+id/tv_comment_full_name"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/whitegray"
        android:text="You look awesome! You look awesome! You look awesome! You look awesome!"
        android:id="@+id/tv_comment_desc"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like    *     Reply"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:id="@+id/tc_comment_like"
        android:paddingTop="2dp"
        android:textSize="8sp" />


    </LinearLayout>



</LinearLayout>

